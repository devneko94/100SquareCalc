<UserControl x:Class="_100SquareCalc.ui.TitleCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_100SquareCalc"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             x:Name="_root">
    <Border DataContext="{Binding ElementName=_root}" BorderBrush="Black" BorderThickness=".5" Background="LightGray">
        <Viewbox>
            <TextBlock TextAlignment="Center" Text="{Binding TitleCellText}"/>
        </Viewbox>
    </Border>
</UserControl>
